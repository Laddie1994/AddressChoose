<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Animation.BottomSlide" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_slide_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_slide_exit</item>
    </style>
</resources>